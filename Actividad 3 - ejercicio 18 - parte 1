    private void btnImprimirActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        
        double valor_h_trabajada, salario_bruto, salario_neto , porcentaje, nh_trabajadas, codigo_empleado;
        String nombre, mensaje; 
        
        nombre = txtNombre.getText();
        codigo_empleado =  Double.parseDouble(txtCodigo.getText());
        nh_trabajadas =  Double.parseDouble(txtNumeroht.getText());
        valor_h_trabajada = Double.parseDouble(txtValorh.getText());
        porcentaje = Double.parseDouble(txtPorcentaje.getText());
        
        salario_bruto = nh_trabajadas * valor_h_trabajada;
        salario_neto = salario_bruto - salario_bruto*(porcentaje/100);
        
        mensaje = (codigo_empleado + " \n " + nombre + " \n " + salario_bruto + " \n " + salario_neto);
        txtImprimir.setText(String.valueOf(mensaje));
        
    }                                           

    private void btnBorrarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        txtNombre.setText("");
        txtCodigo.setText("");
        txtNumeroht.setText("");
        txtValorh.setText("");
        txtPorcentaje.setText("");
        txtImprimir.setText("");
    }                                         

    private void btnSalirActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        dispose();
    }                                        

