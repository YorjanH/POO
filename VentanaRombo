    private void btnSalirActionPerformed(java.awt.event.ActionEvent evt) {                                         
        dispose();
    }                                        

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        
        String mensaje1, mensaje2, mensajefinal;
        double DiagonalMayor, Diagonalmenor, calcularArea, calcularPerímetro, calcularHipotenusa;
        
        DiagonalMayor =  Double.parseDouble(txtDmayor.getText());
        Diagonalmenor =  Double.parseDouble(txtDmenor.getText());

        calcularArea = ((DiagonalMayor * Diagonalmenor) / 2);
        
        calcularHipotenusa = Math.sqrt(((Diagonalmenor/2)*(Diagonalmenor/2)) + ((DiagonalMayor/2)*(DiagonalMayor/2)));

        calcularPerímetro = (calcularHipotenusa+calcularHipotenusa+calcularHipotenusa+calcularHipotenusa);
  
        
        mensaje1 = ("El área del rombo es = " + calcularArea);
        
        mensaje2 = ("El perímetro del rombo = " + calcularPerímetro);
        
        mensajefinal = (mensaje1 + "\n" + mensaje2);
        txtSolucion.setText(String.valueOf(mensajefinal));

    }                                        

    private void btnBorrarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        txtDmayor.setText("");
        txtDmenor.setText("");
        txtSolucion.setText("");
    }                                         

