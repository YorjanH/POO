    private void btnImprimirActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        
        String nombre, mensaje;
        double valorhora, horastrabajadas, salario;
        
        nombre = txtNombre.getText();
        valorhora =  Double.parseDouble(txtHoras.getText());
        horastrabajadas =  Double.parseDouble(txtSalario.getText());
        
        salario = valorhora * horastrabajadas;
        
        if (salario > 450000){
            mensaje = (nombre +" su salario mensual es: " + salario);
            txtInformacion.setText(String.valueOf(mensaje));
        } else {
            txtInformacion.setText(String.valueOf(nombre));
        }
        
    }                                           

    private void btnBorrarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        txtSalario.setText("");
        txtNombre.setText("");
        txtHoras.setText("");
        txtInformacion.setText("");
    }                                         

    private void btnSalirActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        dispose();
    }                                        

