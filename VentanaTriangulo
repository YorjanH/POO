    private void btnSalirActionPerformed(java.awt.event.ActionEvent evt) {                                         
        dispose();
    }                                        

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        
        String mensaje1, mensaje2, mensaje3, mensajefinal;
        double base, altura, calcularArea, calcularPerímetro, calcularHipotenusa;
        
        base =  Double.parseDouble(txtBase.getText());
        altura =  Double.parseDouble(txtAltura.getText());

        calcularArea = (base * altura / 2);
        
        calcularHipotenusa = Math.pow(base*base + altura*altura, 0.5);

        calcularPerímetro = (base + altura + calcularHipotenusa);
  
        
        mensaje1 = ("El área del triángulo es = " + calcularArea);
        
        mensaje2 = ("El perímetro del triángulo es = " + calcularPerímetro);
        
        if ((base == altura) && (base == calcularHipotenusa) && (altura == calcularHipotenusa)){
            mensaje3 = ("Es un triángulo equilátero");
        } else if ((base != altura) && (base != calcularHipotenusa) && (altura != calcularHipotenusa)){
            mensaje3 = ("Es un triángulo escaleno"); 
        } else {
            mensaje3 = ("Es un triángulo isósceles"); 
        }
        
        
        mensajefinal = (mensaje1 + "\n" + mensaje2 + "\n" + mensaje3);
        txtSolucion.setText(String.valueOf(mensajefinal));

    }                                        

    private void btnBorrarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        txtBase.setText("");
        txtSolucion.setText("");
    }                                         

