    private void btnSalirActionPerformed(java.awt.event.ActionEvent evt) {                                         
        dispose();
    }                                        

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        
        String mensaje1, mensaje2, mensajefinal;
        double lado, calcularArea, calcularPerímetro;
        
        lado =  Double.parseDouble(txtLado.getText());

        calcularArea = lado*lado;

        calcularPerímetro = (4*lado);
  
        
        mensaje1 = ("El área del cuadrado es = " + calcularArea);
        
        mensaje2 = ("El perímetro del cuadrado es = " + calcularPerímetro);
        
        mensajefinal = (mensaje1 + "\n" + mensaje2);
        txtSolucion.setText(String.valueOf(mensajefinal));

    }                                        

    private void btnBorrarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        txtLado.setText("");
        txtSolucion.setText("");
    }                                         

